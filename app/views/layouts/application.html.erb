<!DOCTYPE html>
<html>
  <head>
    <title>The Gothenburger Admin Site</title>
    <link rel="shortcut icon" href="/favicon.ico?v=2" />
      <%= stylesheet_link_tag    'application', media: 'all' %>
      <%= javascript_include_tag 'application' %>
      <%= csrf_meta_tags %>
  </head>
  <body class="container">
    <%= render "shared/nav" %>
    <div style="padding-top: 50px;">
      <% if notice.present? %>
        <aside class="alert alert-top alert-info">
          <%= notice %>
        </aside>
      <% end %>
      <% if alert.present? %>
        <aside class="alert alert-top alert-danger">
          <%= alert %>
        </aside>
      <% end %>
    </div>
    <%= yield %>
    <%= render "shared/footer" %>
    <script>
      window.setTimeout(function() {
        $(".alert").fadeTo(500, 0).slideUp(500, function(){
          $(this).remove();
        });
      }, 5000);
    </script>
  </body>
</html>
